ktor {
  deployment {
    environment = development
    port = 8080
    autoreload = true
    watch = [ org.openmbee.flexo.sysmlv2 ]
  }

  application {
    modules = [ org.openmbee.flexo.sysmlv2.AppMainKt.module ]
  }
}

flexo {
    protocol = "http"
    protocol = ${?FLEXO_PROTOCOL}
    host = "localhost"
    host = ${?FLEXO_HOST}
    port = "8080"
    port = ${?FLEXO_PORT}
    org = "sysmlv2"
    org = ${?FLEXO_SYSMLV2_ORG}
    # timeout in seconds
    defaultTimeout = "1800"
    defaultTimeout = ${?FLEXO_DEFAULT_TIMEOUT}
    auth = ""
    auth = ${?FLEXO_AUTH}
}
